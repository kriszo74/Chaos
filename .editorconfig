# EditorConfig helps maintain consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
# Keep intentional trailing spaces in Markdown
trim_trailing_whitespace = false

[*.jl]
# Julia uses 4-space indents by convention
indent_size = 4
